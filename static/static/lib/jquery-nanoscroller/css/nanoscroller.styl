.nano {
  position relative
  width 100%
  height 100%
  overflow hidden

  > .nano-content {
    position absolute
    overflow scroll
    overflow-x hidden
    top 0
    right 0
    bottom 0
    left 0

    &:focus {
      outline none
    }

    &::-webkit-scrollbar {
      display none
    }
  }

  > .nano-pane {
    background rgba(0, 0, 0, .25)
    position absolute
    width 10px
    right 0
    top 0
    bottom 0
    visibility hidden \9
    opacity .01
    transition .2s
    border-radius 5px

    > .nano-slider {
      background #444
      background rgba(0, 0, 0, .5)
      position relative
      margin 0 1px
      border-radius 3px
    }
  }

  &:hover > .theme-data-select-list,
  .theme-data-select-list.active,
  .theme-data-select-list.flashed,
  &:hover > .theme-data-lfl-list,
  .theme-data-lfl-list.active,
  .theme-data-lfl-list.flashed,
  .nano-pane.flashed,
  .nano-pane.active,
  &:hover > .nano-pane {
    visibility visible \9
    opacity 0.99
  }

// 电竞数据库LFL排行榜
  > .theme-data-lfl-list {
    background transparent
    position absolute
    width 6px
    right 0
    top 0
    bottom 0
    visibility hidden \9
    opacity .01
    transition .2s
    border-radius 4px

    > .nano-slider {
      background-color #000
      opacity .1
      position relative
      margin 0
      border-radius 4px
    }
  }

// 电竞数据库下拉框
  > .theme-data-select-list {
    background transparent
    position absolute
    width 6px
    right 3px
    top 3px
    bottom 3px
    visibility hidden \9
    opacity .01
    transition .2s
    border-radius 4px

    > .nano-slider {
      background-color #000
      opacity .2
      position relative
      margin 0
      border-radius 4px
    }
  }

}

.has-scrollbar {
  > .nano-content {
    &::-webkit-scrollbar {
      display block
    }
    &::-webkit-scrollbar-thumb {
      background transparent
    }
  }
}
