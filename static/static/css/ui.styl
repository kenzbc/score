/**自定义按钮**/
.circle-btn {
  display: inline-block;
  line-height: 26px;
  font-size: 13px;
  color: #0D8DFC;
  text-align: center;
  border: 1px solid #0D8DFC;
  border-radius: 20px;
  width: 80px;
  height: 28px;
  cursor: pointer;
  transition: background .3s;

  &:hover,&.active{
    background: #0D8DFC;
    color: #EDF7FF;
  }
}


