/*----------- iview-ui 样式 ----------*/

// select 选择器
.ivu-select, ivu-select-single {
  .ivu-select-selection {
    border: 1px solid #EBEBED;
    border-radius: 16px;
    height: 100%;
    box-shadow: none
    .ivu-select-placeholder, .ivu-select-selected-value {
      color #656973
      font-size 14px
      padding-left 12px
    }
    .ivu-select-selected-value {

    }
  }
  .ivu-select-arrow {
    font-size 20px
    margin-top -10px
    color: #a8abb3
  }
  .ivu-select-dropdown {
    max-height 163px
  }
  .ivu-select-item {
    height: 36px
    line-height 36px
    width: 90%
    margin 0 auto
    padding 0
    padding-left 13px
    border-radius 8px
    font-size 14px !important
    transition none
    + .ivu-select-item {
      margin-top 3px
    }
  }
  .ivu-select-item-selected {
    color #fff
  }
  .ivu-select-item-focus {
    background #0d8dfc
    cursor default
  }
}

// 分页
.ivu-page {
  .ivu-page-item {
    border-radius 50% !important
    transition none
    &:hover a {
      color #fff
    }
    &:not(.ivu-page-item-active) {
      &:hover a {
        color: #0d8dfc
      }
    }
    &.ivu-page-item-active {
      cursor default
      background #0d8dfc
      color #fff
      a {
        color: #fff
        &:hover {
          cursor default
        }
      }
    }
  }

  .ivu-page-custom-text {
    margin 0 10px !important
  }
  .ivu-page-disabled a {
    color #ccc
    &:hover {
      color: #ccc
    }
  }
}

// 消息提示
.ivu-message-notice-content {
    padding: 10px 20px
}

